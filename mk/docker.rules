ARCH:=$(shell ${READIES}/bin/platform --arch)

DOCKER_ORG?=redisfab

# in case we separate them out in the future
REDIS_DOCKER_ORG=redislabs

# for artifact gathering
export ART_DIR=$(ROOT)/bin/artifacts
export ART_INT_DIR=/var/opt/redislabs/artifacts

ifdef BRANCH
ifdef VERSION
$(error Either BRANCH or VERSION should be defined, but not both)
endif
endif

# get the release version, unless one is defined
# since in CI, branches with {d}.{d} push, we allow anything here
# but, master is remapped to edge
# if this is a tag (v1.2.3), we remove the v
ifndef VERSION
	VERSION=$(shell git branch|grep \*|cut -d ' ' -f 2-|sed -e 's/v//g')
	ifeq ($(VERSION),master)  # master
		VERSION=edge
	endif
	ifeq ($(VERSION),)  # tags
	VERSION:=$(shell git name-rev --name-only HEAD | cut -f2 -d/ | cut -f1 -d^ | grep '^v' | sed -e 's/^v\(.*\)/\1/g')
	endif
endif

ifdef BRANCH
	VERSION=${BRANCH}
endif

# e.g redislabs/RedisTimeSeries:edge
DEFAULT_TAG?=${DOCKER_ORG}/${PRODUCT}:${VERSION}

DOCKER_SOURCES=""

ifeq ($(OFFICIAL),1)
OUR_DOCKER_ORG=$(REDIS_DOCKER_ORG)
else
OUR_DOCKER_ORG=$(DOCKER_ORG)
endif


DOCKER_TAGS=
# add the official
ifeq ($(OFFICIAL),1)
DOCKER_TAGS+=$(REDIS_DOCKER_ORG)/$(PRODUCT):$(VERSION)
endif

# edge
ifeq ($(EDGE),1)
ifneq ($(VERSION),edge)
DOCKER_TAGS+=$(OUR_DOCKER_ORG)/$(PRODUCT):edge
endif
endif

# latest tag
ifeq ($(LATEST),1)
DOCKER_TAGS+=$(OUR_DOCKER_ORG)/$(PRODUCT):latest
endif

# preview tag
ifeq ($(PREVIEW),1)
DOCKER_TAGS+=$(OUR_DOCKER_ORG)/$(PRODUCT):preview
endif

# append custom docker tags
ifdef DOCKER_EXT_TAGS
DOCKER_TAGS+=$(DOCKER_EXT_TAGS)
endif

# defaults
PACK ?=0
TEST ?=0

# defaults for wrapper script
NOP=0
PUBLISH=0
KEEP=0
VERBOSE=0

## This builds the docker
## Variables (OSNICK) are prefixed with REDIS_ to allow for automatic use as a variable.
build:
	DOCKER_SOURCES=${DOCKER_SOURCES} \
	DOCKER_TAGS=${DOCKER_TAGS} \
	NOP=${NOP} \
	DOCKER_PUSH=${PUBLISH} \
	VERBOSE=${VERBOSE} \
	KEEP=${KEEP} \
	REDIS_PACK=${PACK} \
	REDIS_TEST=${TEST} \
	REDIS_OSNICK=${OSNICK} \
	REDIS_ARCH=${ARCH} \
	REDIS_OS=${OS} \
	${DOCKERWRAPPER_EXTRA_VARS} \
	${READIES}/bin/dockerwrapper \
		-d ${ROOT}/Dockerfile${DOCKER_SUFFIX} \
		-t ${DEFAULT_TAG} \
		-e REDIS \
		-D "${DOCKER_OPTS}" \
		${DOCKER_ARGS}
ifeq ($(PACK),1)
	IMAGE=${DEFAULT_TAG} ${READIES}/mk/docker-collect-artifacts
endif

# There are mappings between OSNICK to specific OS values, due to docker containers used
# The global mappings are found here.
include ${READIES}/mk/osnick.defs
include ${READIES}/mk/help.defs
include ${READIES}/mk/help.rules
